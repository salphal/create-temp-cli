{
  "include": ["build.config.ts", "src", "__tests__"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    /** path alias */
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"],
      "@clis/*": ["src/clis/*"],
      "@constants/*": ["src/constants/*"],
      "@type/*": ["src/type/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
